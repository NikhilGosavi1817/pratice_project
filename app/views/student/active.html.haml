%br

%center.h1.center Active students

%table.table
    %thead.table
        %tr
            %th
                = link_to "Id", :sort => "id", direction: params[:sort] == "id" && params[:direction] == "asc" ? "desc" : "asc"
            %th
                = link_to "First Name", :sort => "first_name", direction: params[:sort] == "first_name" && params[:direction] == "asc" ? "desc" : "asc"
            %th
                = link_to "Last Name", :sort => "last_name", direction: params[:sort] == "last_name" && params[:direction] == "asc" ? "desc" : "asc"
            %th
                = link_to "Email", :sort => "email", direction: params[:sort] == "email" && params[:direction] == "asc" ? "desc" : "asc"
            %th
                = link_to "Status", :sort => "status", direction: params[:sort] == "status" && params[:direction] == "asc" ? "desc" : "asc"
            %th
        - @student.each do |student|
            %tr
                %td
                    = student.id
                %td
                    = student.first_name
                %td
                    = student.last_name
                %td
                    = student.email
                %td
                    = student.status
                %td
                    = button_to "Suspend", suspend_student_student_path(student), method: :put, class: "btn btn-dark"
= will_paginate @students